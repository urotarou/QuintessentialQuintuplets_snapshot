<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorTextPrimary</item>
        <item name="subtitleTextColor">@color/colorTextPrimary</item>
        <item name="actionMenuTextColor">@color/colorTextSecondary</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextStyle</item>
    </style>

    <style name="ActionMenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
